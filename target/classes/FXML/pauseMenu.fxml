<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="view.PauseMenu"
          prefHeight="400.0" prefWidth="600.0">

    <left>
        <AnchorPane>
            <Button fx:id="guide" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10" onAction="#guide">guide</Button>
        </AnchorPane>
    </left>
    <right>
        <AnchorPane>
            <Button fx:id="mute" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10" onAction="#mute">mute</Button>
        </AnchorPane>
    </right>
    <center>
        <GridPane fx:id="centerPane" alignment="CENTER" hgap="10" vgap="20">
            <Text fx:id="title" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.halignment="CENTER">Pause</Text>
            <Button fx:id="save" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" onAction="#save">Save and Quit</Button>
            <Button fx:id="resume" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER" onAction="#resume">Resume</Button>
            <Button fx:id="restart" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="CENTER" onAction="#restart">Restart</Button>
            <Button fx:id="changeAudio" GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.halignment="CENTER" onAction="#changeAudio">Change Audio</Button>
            <Button fx:id="exit" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.halignment="CENTER" onAction="#exit">Exit</Button>
        </GridPane>
    </center>
</BorderPane>
